<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/head.ejs") %>
<body class="Coffee-Recipes">
  <%- include ('./partials/header.ejs') %>
    <!-- <h4>Add new Recipes</h4>
    <a href="/recipes/new">Add New Recipe</a> -->
    <div>
      <% for(let i = 0; i < recipes.length; i++) { %>
        <!-- Show Page -->
            <a href="/recipes/<%= recipes[i]._id %>">
                <h3><% recipes[i].name %></h3>
            </a>
            <p><%= recipes[i].description %></p>
            <p><%= recipes[i].ingredients %></p>
            <p><%= recipes[i].instructions %></p>
            <img src="<%= recipes[i].image %>" alt="">
            <a href="/recipes/<%= recipes[i]._id %>/edit">Edit</a>
            <form action="/recipes/<%= recipes[i]._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete">
            </form>
        <% } %>
    </div>
    <%- include ("./partials/footer.ejs") %>
</body>
</html>