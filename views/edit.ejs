<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/head.ejs") %>
<body class="Coffee-Recipes row">
    <!-- // Use Fruits app as a reference to create the form -->
    <%- include ('./partials/header.ejs') %>
    <h1 class="">Edit Coffee Recipes <%= recipe.name %></h1>
    <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST" class="container-sm bg-light p-3">
        <div class="card-content">
            <div>
                <label for="name" class="form-label">Coffee</label>
                <input 
                    type="text"
                    class="form-control"
                    name="name"
                    id="name"
                    value="<%= recipe.name %>"
                    placeholder="Coffee Name">
            </div>
            <div>
                <label for="description" class="form-label">Description</label>
                <input 
                    type="text"
                    class="form-control"
                    name="description"
                    id="description"
                    value="<%= recipe.description %>"
                    placeholder="Description">
            </div>
            <div>
                <label for="ingredients" class="form-label">Ingredients</label>
                <input 
                    type="text"
                    class="form-control"
                    name="ingredients"
                    id="ingredients"
                    value="<%= recipe.ingredients %>"
                    placeholder="Ingredients">
            </div>
            <div>
                <label for="instructions" class="form-label">Instructions</label>
                <input 
                    type="text"
                    class="form-control"
                    name="instructions"
                    id="instructions"
                    value="<%= recipe.instructions %>"
                    placeholder="Instructions">
            </div>
        <div>
    </form>        
            <input type="submit" value="Update Recipe" class="btn btn-primary">
    <%- include ("./partials/footer.ejs") %> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"> 
</body>
</html>